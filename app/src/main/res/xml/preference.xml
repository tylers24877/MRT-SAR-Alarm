<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="prefEnabled"
        android:summary="@string/pref_enabled_summary"
        android:title="@string/pref_enabled_title" />

    <PreferenceCategory app:title="Advanced" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:enabled="false"
        android:key="prefUsePhoneNumber"
        android:summary="Listen for SARCALL phone number, rather than keyword trigger."
        android:title="Use SARCALL phone number" />
    <MultiSelectListPreference
        android:dialogTitle="@string/trigger_pref_title"
        android:enabled="false"
        android:entries="@array/triggerListPrefText"
        android:entryValues="@array/triggerListPref"
        android:key="triggerResponses"
        android:summary="@string/triggers_sum"
        android:title="@string/trigger_pref_title" />
</PreferenceScreen>